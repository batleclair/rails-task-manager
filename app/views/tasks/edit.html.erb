<div class="container mt-5">
  <h1>Edit task</h1>
  <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
  <% end %>

  <div class="controls">
    <span class="mt-3">
      <i class="fas fa-ban"></i>
      <h6 class="inline"><%= link_to 'Cancel', task_path(@task) %></h6>
    </span>

    <span class="mt-3">
      <i class="fas fa-undo"></i>
      <h6 class="inline"><%= link_to 'Back to list of tasks', tasks_path %></h6>
    </span>
  </div>

</div>
