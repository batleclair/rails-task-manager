<div class="container mt-5">
  <h1>My tasks</h1>
  <ul class="list-formatted">
    <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
      <i class="far fa-check-square me-3"></i>
      <% else %>
      <i class="far fa-square me-3"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fas fa-trash-alt ms-3"></i>
      <% end %>
    </li>
    <% end %>
  </ul>
  <i class="fas fa-plus-square me-3"></i> <%= link_to 'Add new task', tasks_new_path %>
</div>
