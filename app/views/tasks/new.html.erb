<div class="container mt-5">
  <h1>New task</h1>
  <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
  <% end %>
  <div class="controls">
    <span class="mt-3">
      <i class="fas fa-ban"></i>
      <h6 class="inline"><%= link_to 'Cancel', tasks_path %></h6>
    </span>
  </div>
</div>
